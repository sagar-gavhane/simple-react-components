{
  "name": "simple-react-components",
  "version": "1.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/app.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "author": {
    "name": "Sagar Gavhane",
    "email": "sgavhane70@gmail.com",
    "url": "https://sagar-gavhane.com"
  },
  "private": false,
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "prettier": "prettier --config ./.prettierrc \"**/*.+(ts|tsx|json|css|scss|md|html|yaml)\"",
    "format": "npm run prettier -- --write",
    "test:staged": "cross-env CI=true react-scripts test --env=jsdom --findRelatedTests"
  },
  "eslintConfig": {
    "extends": "react-app",
    "parser": "@typescript-eslint/parser"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "lint-staged": {
    "**/*.+(ts|tsx)": [
      "npm run lint",
      "npm run format",
      "npm run test:staged",
      "git add"
    ],
    "**/*.+(json|css|scss|md|html|yaml)": [
      "npm run format",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "size-limit": [
    {
      "path": "dist/app.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/app.esm.js",
      "limit": "10 KB"
    }
  ],
  "peerDependencies": {
    "react": ">=16"
  },
  "dependencies": {
    "@types/jest": "23.3.13",
    "@types/node": "10.12.18",
    "@types/react": "16.7.21",
    "@types/react-dom": "16.0.11",
    "proptypes": "^1.1.0",
    "react": "^16.8.0-alpha.1",
    "react-dom": "^16.8.0-alpha.1",
    "react-scripts": "2.1.3",
    "typescript": "3.2.4"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^1.1.0",
    "cross-env": "^5.2.0",
    "jest-dom": "^3.0.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.16.1",
    "react-testing-library": "^5.4.4",
    "@size-limit/preset-small-lib": "^4.9.2",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "husky": "^5.0.9",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "size-limit": "^4.9.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5"
  }
}
