{
  "name": "simple-react-components-tsx",
  "version": "1.0.0",
  "private": false,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "prettier": "prettier --config ./.prettierrc \"**/*.+(ts|tsx|json|css|scss|md|html|yaml)\"",
    "format": "npm run prettier -- --write",
    "test:staged": "cross-env CI=true react-scripts test --env=jsdom --findRelatedTests"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.+(ts|tsx)": [
      "npm run lint",
      "npm run format",
      "npm run test:staged",
      "git add"
    ],
    "**/*.+(json|css|scss|md|html|yaml)": [
      "npm run format",
      "npm run test:staged",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@types/jest": "23.3.13",
    "@types/node": "10.12.18",
    "@types/react": "16.7.21",
    "@types/react-dom": "16.0.11",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-scripts": "2.1.3",
    "typescript": "3.2.4"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "husky": "^1.3.1",
    "jest-dom": "^3.0.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.16.1",
    "react-testing-library": "^5.4.4"
  }
}
